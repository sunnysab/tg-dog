api_id: 123456
api_hash: your_api_hash
proxy: socks5://127.0.0.1:7890
profiles:
  work:
    phone_number: '+10000000000'
  personal:
    phone_number: '+10000000000'
tasks:
- profile: work
  trigger_time: '*/5 * * * *'
  action_type: send_msg
  target: '@channel_or_user'
  enabled: true
  payload:
    text: Scheduled hello
- profile: personal
  trigger_time: 0 * * * *
  action_type: download
  target: '@chat'
  enabled: true
  payload:
    media_type: photo
    limit: 5
    max_size: 5242880
    output_dir: downloads
- profile: work
  trigger_time: '*/5 * * * *'
  action_type: plugin
  enabled: true
  payload:
    plugin: random_daily_sender
    args:
    - --target
    - '@VmomoVBot'
    - --text
    - /checkin
    - --window
    - 09:00-23:00
    - --min-interval-hours
    - '24'
    - --state
    - data/state.yaml
listeners:
- profile: work
  plugin: webhook_listener
  enabled: true
  args:
  - --target
  - -1001234567890
  - --url
  - https://example.com/webhook
